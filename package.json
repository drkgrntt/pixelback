{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "server-watch": "yarn workspace @pixelback/server run watch --stream --",
    "server": "yarn workspace @pixelback/server run dev --stream --",
    "web": "yarn workspace @pixelback/web run dev --stream --",
    "mobile": "yarn workspace @pixelback/mobile run dev --stream --",
    "build": "yarn workspaces run build",
    "deploy-server": "git push heroku-server main:master",
    "deploy-web": "git push heroku-web main:master"
  }
}
